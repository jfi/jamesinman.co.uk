{
  "name": "james-inman-site",
  "version": "1.0.0",
  "scripts": {
    "dev": "tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css --watch",
    "build": "tailwindcss -i ./assets/css/input.css -o ./assets/css/main.css",
    "build:jekyll": "bundle exec jekyll build",
    "build:all": "npm run build && npm run build:jekyll",
    "serve": "npm run build && bundle exec jekyll serve",
    "precommit": "npm run build && git add assets/css/main.css"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "husky": "^8.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}
